<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>

{{#each messages}}
<div class="card">
    <h6 class="card-subtitle mb-2 text-muted">{{this.user}}</h6>
    <div class="card-body">
        {{this.text}}
    </div>
</div>
{{/each}}

<center>
    <a class="btn btn-primary w-100 mt-3" href="/new">
        New Message
    </a>
</center>