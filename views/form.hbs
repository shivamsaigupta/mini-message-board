<h1>{{title}}</h1>
<form method="POST" action="/new">
    <div class="form-group">
        <textarea class="form-control" name="text" id="text" placeholder="Type your message here"
            required="true"></textarea>
        <input type="text" name="user" class="form-control" id="user" placeholder="Your Name" required="true">
    </div>
    <div class="form-group">
        <input type="submit" name="submit" class="btn btn-primary form-control" id="submit" value="Post">
    </div>

</form>